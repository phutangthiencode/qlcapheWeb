                            <div role="tabpanel" class="tab-pane fade in active" id="home_with_icon_title">
                                @using (Html.BeginForm("ntk_TaoMoiNhomTK", "NhomTaiKhoan", FormMethod.Post))
                                {
                                    <div class="row">
                                        <div class="col-md-6 col-lg-6">
                                            <label for="txtTenNhom">Tên nhóm</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    @Html.TextBox("txtTenNhom", null, new
                                       {
                                           @class = "form-control",
                                           @placeholder = "Nhập tên nhóm tại đây",
                                           @required = "true",
                                           @maxlength = "50",
                                           @value = @ViewBag.txtTenNhom
                                       })
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-md-6 col-lg-6">
                                            <label for="txtDienGiai">Diễn giải</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    @Html.TextBox("txtDienGiai", null, new
                                       {
                                           @class = "form-control no-resize",
                                           @placeholder = "Nhập diển giải cho nhóm tài khoản",
                                           @required = "true",
                                           @maxlength = "100",
                                           @value = @ViewBag.txtDienGiai
                                       })
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-md-12 col-lg-12">

                                            <label for="txtTrangMacDinh">Trang mặc định</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    @Html.TextBox("txtTrangMacDinh",
                                            null, new
                                            {
                                                @class = "form-control",
                                                @placeholder = "Nhập URL mặc định sau khi đăng nhập",
                                                @value = @ViewBag.txtTrangMacDinh
                                            })
                                                </div>
                                            </div>

                                            <label for="txtGhiChu">Ghi chú</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    @Html.TextBox("txtGhiChu", null, new
                                            {
                                                @class = "form-control no-resize",
                                                @placeholder = "Nhập thêm ghi chú cho nhóm tài khoản",
                                                @value = @ViewBag.txtGhiChu
                                            })

                                                </div>
