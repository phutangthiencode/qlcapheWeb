@model qlCaPhe.Models.nhomTaiKhoan
@{
    ViewBag.Title = "Chỉnh sửa nhóm tài khoản";
    Layout = "~/Views/Shared/_LayoutTools.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Tài khoản - Thành viên > Quản lý nhóm tài khoản > Chỉnh sửa nhóm tài khoản</h2>
        </div>
        <!-- Vertical Layout -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <div class="row">
                            <div class="col-md-5 col-lg-5 col-xs-12 col-sm-5">
                                <i class="material-icons">group</i>
                                <span class="font-20">CHỈNH SỬA NHÓM TÀI KHOẢN</span>
                            </div>
                            <div class="col-md-7 col-lg-7 col-sm-7 col-xs-12">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" style="float:right">
                                    <li class="">
                                        <a href="~/NhomTaiKhoan/ntk_TableNhomTK">
                                            <i class="material-icons">list</i> DANH MỤC NHÓM TÀI KHOẢN
                                        </a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="body">
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade in active" id="home_with_icon_title">
                                
                                @using (Html.BeginForm())
                                {
                                    <input type="hidden" id="txtMaNhom" name="txtMaNhom" value="@ViewBag.txtMaNhom" />
                                    <div class="row">

                                        <div class="col-md-6 col-lg-6">
                                            <label for="txtTenNhom">Tên nhóm</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(m => m.tenNhom, new
                                       {
                                           @Name = "txtTenNhom",
                                           @class = "form-control",
                                           @placeholder = "Nhập tên nhóm tại đây",
                                           @required = "true",
                                           @maxlength = "50"
                                       })
                                                </div>
                                            </div>

                                        </div>


                                        <div class="col-md-6 col-lg-6">
                                            <label for="txtDienGiai">Diễn giải</label>
                                            <div class="form-group">
                                                <div class="form-line">

                                                    @Html.TextBoxFor(m => m.dienGiai, new
                                       {
                                           @Name = "txtDienGiai",
                                           @class = "form-control no-resize",
                                           @placeholder = "Nhập diển giải cho nhóm tài khoản",
                                           @required = "true",
                                           @maxlength = "100"
                                       })
                                                </div>
                                            </div>


                                        </div>



                                        <div class="col-md-12 col-lg-12">

                                            <label for="txtTenNhom">Trang mặc định</label>
                                            <div class="form-group">
                                                <div class="form-line">

                                                    @Html.TextBoxFor(m => m.trangMacDinh, new { @Name = "txtTrangMacDinh", @class = "form-control", @placeholder = "Nhập URL mặc định sau khi đăng nhập" })
                                                </div>
                                            </div>

                                            <label for="txtTenNhom">Ghi chú</label>
                                            <div class="form-group">
                                                <div class="form-line">

                                                    @Html.TextBoxFor(m => m.ghiChu, new
                                       {
                                           @Name = "txtGhiChu",
                                           @class = "form-control no-resize",
                                           @placeholder = "Nhập thêm ghi chú cho nhóm tài khoản",
                                       })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-7"></div>

                                        <div class="col-md-5">
                                            <br>
                                            <input type="submit" class="btn btn-primary m-t-15 waves-effect" data-toggle="modal" data-target="#myModal" value="Lưu lại">
                                            <button type="button" onclick="troVeTrangTruoc()" class="btn btn-default m-t-15 waves-effect">Trở lại</button>
                                        </div>
                                    </div>


                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Vertical Layout -->
    </div>
    <!-- Modal -->
    @Html.Raw(@ViewBag.ThongBao)

</section>
