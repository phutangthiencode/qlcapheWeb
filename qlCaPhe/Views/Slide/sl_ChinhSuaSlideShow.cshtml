
@{
    ViewBag.Title = "Chỉnh sửa SlideShow";
    Layout = "~/Views/Shared/_LayoutTools.cshtml";
}


<link href="~/Content/toolTipGoiY.css" rel="stylesheet" />
<link href="~/Content/styleTool.css" rel="stylesheet" />
<link href="~/Content/jquery.Jcrop.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.Jcrop.js"></script>

<script type="text/javascript">

    @Html.Raw(ViewBag.ScriptCropImage)
</script>


<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Cơ sở - Vật chất > Tạo mới bàn - chổ ngồi</h2>
        </div>
        <!-- Vertical Layout -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <div class="row">
                            <div class="col-md-5 col-lg-5 col-xs-12 col-sm-5">
                                <i class="material-icons">slideshow</i>
                                <span class="font-20">CHỈNH SỬA SLIDESHOW</span>
                            </div>
                            <div class="col-md-7 col-lg-7 col-sm-7 col-xs-12">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" style="float:right">
                                    <li class="">
                                        <a href="~/Slide/sl_TaoMoiSlideShow">
                                            <i class="material-icons">add</i> TẠO MỚI SLIDESHOW
                                        </a>
                                    </li>
                                    <li class="">
                                        <a href="~/Slide/sl_TableSlideShow?trangThai=true">
                                            <i class="material-icons">list</i> DANH MỤC SLIDESHOW
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="body">
                        @using (Html.BeginForm("sl_ChinhSuaSlideShow", "Slide", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            <div class="row">
                                <div class="col-md-7 col-lg-7">

                                    <input type="number" id="txtMaSlide" name="txtMaSlide" value="@ViewBag.txtMaSlide" style="display:none;">

                                    <label for="txtTenNhom">Hình ảnh</label>
                                    <br />
                                    <img id="hinhDD" class='img img-responsive img-thumbnail'
                                         src="@ViewBag.hinhDD" />
                                    <br />
                                    <button type="button" class="btn btn-default " id="btnChonHinh"
                                            data-toggle="modal" data-target="#modalChonHinh">
                                        Chọn hình
                                    </button>

                                    <input id="pathHinh" type="hidden" name="pathHinh" value="">
                                    <br /><br />



                                </div>
                                <div class="col-md-5 col-lg-5">

                                    <label for="txtThuTu" class="goiY">
                                        Số thứ tự sắp xếp
                                        <span class="noiDungGoiY-right">Thứ tự của slide sẽ được sắp xếp tăng dần trên trang chủ. Nếu Thứ tự trùng nhau thì sẽ sắp theo ngày tạo</span>
                                    </label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="number" id="txtThuTu" class="form-control" name="txtThuTu"
                                                   placeholder="Nhập số thứ tự sắp xếp của slide trên trang chủ" value="@ViewBag.txtThuTu">

                                        </div>
                                    </div>


                                    <label for="txtGhiChu">Ghi chú</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <textarea rows="4" id="txtGhiChu" 
                                                      class="form-control no-resize" name="txtGhiChu">@ViewBag.txtGhiChu</textarea>
                                    </div>
                                </div>


                            </div>

                            <div class="col-md-7"></div>

                            <div class="col-md-5">
                                <input type="submit" class="btn btn-primary m-t-15 waves-effect" value="Lưu lại">
                                <a href="/Slide/sl_TaoMoiSlideShow" class="btn btn-default m-t-15 waves-effect">Reset</a>
                                <button type="button" onclick="troVeTrangTruoc()" class="btn btn-default m-t-15 waves-effect">Trở lại</button>
                            </div>
                        </div>

                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Vertical Layout -->
    </div>
</section>

<!-- Modal -->
@Html.Raw(@ViewBag.ThongBao)
<!--Modal up hình-->
@Html.Raw(ViewBag.modalChonHinh);

