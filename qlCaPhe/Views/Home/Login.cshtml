
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập hệ thống</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/themeLogin/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/themeLogin/util.css" rel="stylesheet" />
    <link href="~/Content/themeLogin/main.css" rel="stylesheet" />

</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/images/img-login-page.png" />
                </div>

                <form class="login100-form validate-form" action="/Home/Login" method="post">
                    <span class="login100-form-title">
                        Đăng nhập hệ thống
                    </span>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="text" name="txtTenDangNhap" placeholder="Tài khoản">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="password" name="txtMatKhau" placeholder="Mật khẩu">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Đăng nhập
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Hỗ trợ:
                        </span>
                        <a class="txt2" href="#">
                            01684273574
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>

</body>
</html>
