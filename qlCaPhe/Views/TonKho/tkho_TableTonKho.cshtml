                                                    <th width="15%">Tổng tiền</th>
                                                    <th width="20%">Chức năng</th>
                                                </tr>
                                            </thead>
                                            <tfoot>

                                            </tfoot>
                                            <tbody>
                                                @Html.Raw(ViewBag.TableData)
                                                @*<tr role="row" class="odd">
                                                        <td>121</td>
                                                        <td>phutangthien</td>
                                                        <td>02/11/1996</td>
                                                        <td>192000</td>
                                                        <td><a href="TonKho/tkho_TableCtTonKho" class="btn btn-info waves-effect">Xem chi tiết </a></td>
                                                    </tr>*@
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 pull-right">
                                    <div class="pull-right" id="DataTables_Table_0_paginate">
                                        @Html.Raw(ViewBag.PhanTrang)
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Vertical Layout -->
    </div>

</section>
