@model qlCaPhe.Models.Entities.SoLuongBan

<div class="row clearfix">
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="col-lg-4 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-blue-grey hover-expand-effect">
                <div class="icon">
                    <i class="material-icons">hourglass_empty</i>
                </div>
                <div class="content">
                    <div class="text">BÀN TRỐNG</div>
                    <div class="number count-to" data-from="0" data-to="@Model.trong.ToString()" data-speed="15" data-fresh-interval="20"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-light-green hover-expand-effect">
                <div class="icon">
                    <i class="material-icons">forum</i>
                </div>
                <div class="content">
                    <div class="text">CHỜ ĐẶT MÓN</div>
                    <div class="number count-to" data-from="0" data-to="@Model.choOrder.ToString()" data-speed="1000" data-fresh-interval="20"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-red hover-expand-effect">
                <div class="icon">
                    <i class="material-icons">playlist_add_check</i>
                </div>
                <div class="content">
                    <div class="text">ĐÃ ĐẶT MÓN</div>
                    <div class="number count-to" data-from="0" data-to="@Model.daOrder.ToString()" data-speed="1000" data-fresh-interval="20"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="col-lg-4 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-cyan hover-expand-effect">
                <div class="icon">
                    <i class="material-icons">replay_30</i>
                </div>
                <div class="content">
                    <div class="text">CHỜ THANH TOÁN</div>
                    <div class="number count-to" data-from="0" data-to="@Model.choThanhToan.ToString()" data-speed="15" data-fresh-interval="20"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-deep-purple hover-expand-effect">
                <div class="icon">
                    <i class="material-icons">done_all</i>
                </div>
                <div class="content">
                    <div class="text">ĐÃ THANH TOÁN</div>
                    <div class="number count-to" data-from="0" data-to="@Model.daThanhToan.ToString()" data-speed="1000" data-fresh-interval="20"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-orange hover-expand-effect">
                <div class="icon">
                    <i class="material-icons">widgets</i>
                </div>
                <div class="content">
                    <div class="text">TỔNG BÀN</div>
                    <div class="number count-to" data-from="0" data-to="@Model.tongCongBan.ToString()" data-speed="1000" data-fresh-interval="20"></div>
                </div>
            </div>
        </div>
    </div>
</div>
