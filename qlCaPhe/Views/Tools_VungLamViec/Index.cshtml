@{
    ViewBag.Title = "Vùng làm việc";
    Layout = "~/Views/Shared/_LayoutTools.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>DASHBOARD</h2>
        </div>

        <!-- Thống kê số lượng bàn -->
        @Html.Action("tools_PartThongKeSoLuongBan", "Tools_VungLamViec")
        <!-- #END# Thống kê số lượng bàn -->
        <!-- Download app-->
        @Html.Action("tools_PartDownloadApp", "Tools_VungLamViec")
        <!-- #END# Download app -->

        <div class="row clearfix">
            <!-- Đặt bàn online -->
            @Html.Action("tools_PartDatBanOnline", "Tools_VungLamViec")
            <!-- #END# Đặt bàn online -->
            <!-- Phản hồi -->
            @Html.Action("tools_PartPhanHoi", "Tools_VungLamViec")
            <!-- #END# Phản hồi -->
            <!-- Bài viết mới -->
            @Html.Action("tools_PartBaiViet", "Tools_VungLamViec")
            <!-- #END# Bài viết mới-->
        </div>

        <div class="row clearfix">
            <!-- Nhật ký-->
            @Html.Action("tools_PartNhatKy", "Tools_VungLamViec")
            <!-- #END# Nhật ký -->
        </div>

        <div class="row clearfix">           
             <!-- Thống kê sản phảm chạy -->
            @Html.Action("tools_ThongKeSanPham", "Tools_VungLamViec")
            <!-- #END# Thống kê sản phảm chạy  -->
        </div> 
    </div>
</section>

