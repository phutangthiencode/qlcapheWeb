@{
    ViewBag.Title = "Danh mục bàn - chổ ngồi";
    Layout = "~/Views/Shared/_LayoutTools.cshtml";
}
@section stylecustom{

<link href="~/Content/toolTipGoiY.css" rel="stylesheet" />
}
@section sciptajax{
@Html.Raw(ViewBag.ScriptAjaxXemHinh)
@Html.Raw(ViewBag.ScriptAjax)
}
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Cơ sở - vật chất> Danh mục bàn - chổ ngồi</h2>
        </div>
        <!-- Vertical Layout -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">

                    <div class="header">
                        <div class="row">
                            <div class="col-md-5 col-lg-5 col-xs-12 col-sm-5">
                                <i class="material-icons">vibration</i>
                                <span class="font-20">QUẢN LÝ BÀN - CHỔ NGỒI</span>
                            </div>
                            <div class="col-md-7 col-lg-7 col-sm-7 col-xs-12">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" style="float:right">
                                    <li class="">
                                        <a href="~/Ban/b_TaoMoiBan">
                                            <i class="material-icons">add</i> TẠO MỚI BÀN - CHỔ NGỒI
                                        </a>
                                    </li>
                                    <li class="active">
                                        <a href="~/Ban/b_TableBan">
                                            <i class="material-icons">list</i> DANH MỤC BÀN - CHỔ NGỒI
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="body">
                        <ul class="nav nav-tabs tab-col-pink tab-nav-right" role="tablist">
                            <li role="presentation" class=""><a href="/Ban/b_TableBan"><i class="material-icons">done</i>Danh mục bàn đang sử dụng</a></li>
                            <li role="presentation" class="active"><a href="/Ban/b_TableBanSuaChua"><i class="material-icons">find_replace</i>Danh mục bàn đang sửa chữa</a></li>
                            <li role="presentation" class=""><a href="/Ban/b_TableBanHuyBo"><i class="material-icons">delete_sweep</i>Danh mục bàn không sử dụng</a></li>

                            <li class="pull-right"><button type="button" class="btn bg-purple btn-circle waves-effect waves-circle waves-float" data-toggle="collapse" data-target="#collapse-search" aria-expanded="true" aria-controls="collapse-search"><i class="material-icons">search</i></button></li>
                        </ul>
                        <div class="tab-content">

                            <div class="row">

                                <div class="collapse" id="collapse-search" aria-expanded="true" style="">

                                    <form class="form-horizontal" action="/Ban/b_TableBanSuaChua" method="post">
                                        <div class="row clearfix">
                                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                                <label for="email_address_2">Tên bàn</label>
                                            </div>

                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-7">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        <input type="text" id="txtTenBan" class="form-control" name="txtTenBan"
                                                               placeholder="Nhập tên bàn sửa chữa cần tìm">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                                                <button type="submit" class="btn btn-primary waves-effect">
                                                    <i class="material-icons">search</i>
                                                    <span>TÌM</span>
                                                </button>
                                            </div>
                                        </div>


                                    </form>
                                </div>
                            </div>

                            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-striped table-hover js-basic-example dataTable" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                                <thead>
                                                    <tr>
                                                        <th width="15%">Tên bàn</th>
                                                        <th width="40%">Giới thiệu</th>
                                                        <th width="15%">Khu vực</th>
                                                        <th width="9%">Sức chứa</th>
                                                        <th width="21%">Chức năng</th>
                                                    </tr>
                                                </thead>
                                                <tfoot>

                                                </tfoot>
                                                <tbody>
                                                    @Html.Raw(ViewBag.TableData)
                                                    @*<tr role="row" class="odd">

                                                            <td>
                                                                Bàn số 11
                                                            </td>
                                                            <td>
                                                                Khu vực A
                                                            </td>
                                                            <td>5 khách</td>
                                                            <td>
                                                                <div class="btn-group">
                                                                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                                                        Chức năng <span class="caret"></span>
                                                                    </button>
                                                                    <ul class="dropdown-menu" role="menu">
                                                                        <li><a href="/Ban/b_ChinhSaBan?maBan=" class="col-blue"><i class="material-icons">mode_edit</i>Chỉnh sửa</a></li>
                                                                        <li><a href="#" class="col-red"><i class="material-icons">delete</i>Xoá bỏ</a></li>
                                                                    </ul>
                                                                </div>
                                                            </td>
                                                        </tr>*@

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 pull-right">
                                        <div class="pull-right" id="DataTables_Table_0_paginate">
                                            @Html.Raw(ViewBag.PhanTrang)
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>




                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Vertical Layout -->
    </div>
</section>
