@{
    ViewBag.Title = "Danh mục chờ phản hồi";
    Layout = "~/Views/Shared/_LayoutTools.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Bài viết - Phản hồi > Danh mục phản hồi</h2>
        </div>
        <!-- Vertical Layout -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <div class="row">
                            <div class="col-md-5 col-lg-5 col-xs-12 col-sm-5">
                                <i class="material-icons">comment</i>
                                <span class="font-20">PHẢN HỒI TỪ KHÁCH HÀNG</span>
                            </div>
                        </div>
                    </div>
                    <div class="body">
                        <ul class="nav nav-tabs tab-col-pink" role="tablist">

                            <li role="presentation" class="active"><a href="/PhanHoi/ph_TableChoPhanHoi"><i class="material-icons">find_replace</i>Phản hồi chờ trả lời</a></li>
                            <li role="presentation" class=""><a href="/PhanHoi/ph_TableDaPhanHoi"><i class="material-icons">done</i>Phản hồi đã trả lời</a></li>

                        </ul>
                        <div class="tab-content">
                            <div class="">
                                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="table-responsive">
                                                @Html.Action("ph_PartTable","PhanHoi", new {trangThai=0})
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 pull-right">
                                            <div class="pull-right" id="DataTables_Table_0_paginate">
                                                @Html.Raw(ViewBag.PhanTrang)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Vertical Layout -->
    </div>

    @Html.Raw(ViewBag.ModalChiTietFeedBack)

    @*modal Xóa*@
    @Html.Raw(ViewBag.ModalXoa)
    <!--Modal xem chi tiết thành viên-->
    @Html.Raw(ViewBag.ModalChiTiet)
    @Html.Raw(ViewBag.ScriptAjaxXemChiTiet)
    @Html.Raw(ViewBag.ScriptAjaxXoaFeedBack)

</section>

