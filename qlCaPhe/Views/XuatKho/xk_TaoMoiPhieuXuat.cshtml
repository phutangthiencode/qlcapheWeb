
@{
    ViewBag.Title = "Tạo mới xuất kho";
    Layout = "~/Views/Shared/_LayoutTools.cshtml";
}


<script src="~/Scripts/Ajax/ajaxXuatKho.js"></script>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Nhập - Xuất kho > Xuất hàng</h2>
        </div>
        <!-- Vertical Layout -->
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <div class="row">
                            <div class="col-md-5 col-lg-5 col-xs-12 col-sm-5">
                                <i class="material-icons">cloud_upload</i>
                                <span class="font-20">QUẢN LÝ XUẤT KHO</span>
                            </div>
                            <div class="col-md-7 col-lg-7 col-sm-7 col-xs-12">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" style="float:right">
                                    <li class="active">
                                        <a href="~/XuatKho/xk_TaoMoiPhieuXuat">
                                            <i class="material-icons">add</i> TẠO MỚI PHIẾU XUẤT KHO
                                        </a>
                                    </li>
                                    <li class="">
                                        <a href="~/XuatKho/xk_TableXuatKho">
                                            <i class="material-icons">list</i> DANH MỤC PHIẾU XUẤT KHO
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="body">
                        @using (Html.BeginForm("xk_TaoMoiPhieuXuat", "XuatKho", FormMethod.Post))
                                {
                            <ul class="nav nav-tabs tab-nav-right" role="tablist">
                                <li role="presentation" class="active"><a href="#phieuXuat" data-toggle="tab" aria-expanded="true">Phiếu xuất</a></li>
                                <li role="presentation" class=""><a href="#chonNguyenLieu" data-toggle="tab" aria-expanded="false">Chọn nguyên liệu</a></li>
                            </ul>
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane fade  active in" id="phieuXuat">
                                    <div class="card">
                                        <div class="header bg-red">
                                            <h2>Phiếu xuất kho</h2>
                                        </div>
                                        <div class="body">
                                            <div class="row">
                                                <div class="col-md-7 col-lg-7">
                                                    <label for="cbbKhoHang">Chọn kho cần xuất</label>
                                                    <select class="form-control show-tick" id="cbbKhoHang" name="cbbKhoHang">
                                                        <option value="">-- Lựa chọn kho hàng cần nhập hàng--</option>
                                                        @Html.Raw(ViewBag.cbbKhoHang)
                                                    </select>
                                                    <br /><br />

                                                    <div class="row clearfix">
                                                        <div class="col-md-6 col-lg-6">
                                                            <label for="txtTongTien">Tổng tiền nhập thực tế in trên phiếu</label>
                                                            <div class="form-group">
                                                                <div class="form-line">
                                                                    <input type="number" id="txtTongTien" name="txtTongTien" required
                                                                           placeholder="Nhập tổng số tiền nhập nguyên liệu vào kho" value="@ViewBag.txtTongTien" class="form-control">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6 col-lg-6">
                                                            <label for="txtNguoiLapPhieu">Người lập phiếu</label>
                                                            <div class="form-group">
                                                                <div class="form-line">
                                                                    <input type="text" id="txtNguoiLapPhieu" name="txtNguoiLapPhieu"
                                                                           value="@ViewBag.txtNguoiLapPhieu" disabled class="form-control">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4 col-lg-4">


                                                    <label for="txtGhiChu">Ghi chú</label>
                                                    <div class="form-group">
                                                        <div class="form-line">
                                                            <textarea rows="5" id="txtGhiChu" class="form-control no-resize" name="txtGhiChu" placeholder="Nhập thêm ghi chú khi nhập hàng vào kho">@ViewBag.txtGhiChu</textarea>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div><!--row-->
                                        </div>  <!--body-card-->
                                    </div> <!--card phiếu nhập-->
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="chonNguyenLieu">
                                    <div class="card buoc">
                                        <div class="header bg-cyan">
                                            <h2>Lựa chọn nguyên liệu nhâp</h2>
                                        </div>
                                        <div class="body">
                                            <div class="row">
                                                <div class="col-md-6 col-lg-6">
                                                    <button type="button" class="btn btn-success waves-effect" data-toggle="modal" id="btnModalChonNguyenLieu"
                                                            data-target="#largeModalChonNguyenLieu">
                                                        Chọn nguyên liệu
                                                    </button>


                                                    <label for="txtTenNhom" class="showSuccess">Hình nguyên liệu</label>
                                                    <br />
                                                    <div id="vungNguyenLieu">
                                                        <!--Vùng hiển thị hình ảnh của nguyên liệu sau khi đã chọn trên modal-->
                                                    </div>
                                                    <br />
                                                    <div class="row clearfix">
                                                        <div class="col-lg-6 col-md-6 col-sm-4 col-xs-4">

                                                        </div>
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-4">

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-lg-6">
                                                    <br /><br />

                                                    <label for="txtGhiChu">Ghi chú nguyên liệu nhập</label>
                                                    <div class="form-group">
                                                        <div class="form-line">
                                                            <textarea rows="6" id="txtGhiChuCt" class="form-control no-resize"
                                                                      placeholder="Nhập thêm ghi chú cho nguyên liệu nhập"></textarea>
                                                        </div>
                                                    </div>
                                                    <button type="button" id="btnThemHangVaoPhieu" class="btn btn-info waves-effect">Thêm vào phiếu</button>
                                                    <button type="reset" class="btn btn-default waves-effect">Nhập lại nguyên liệu</button>
                                                </div>
                                            </div><!--row-->
                                            <div class="card">
                                                <div class="header">
                                                    <h2>Danh sách nguyên liệu trong phiếu xuất</h2>
                                                </div>
                                                <div class="body table-responsive">
                                                    <div id="vungDsChiTiet">

                                                    </div>
                                                    <button type="button" id="btnXoaTatCa" style="display:none;" class="btn btn-danger m-t-15 waves-effect">Xoá tất cả nguyên liệu</button>

                                                </div>
                                            </div> <!--Cart table danh sách chi tiết-->
                                        </div>  <!--body-card-->
                                    </div>
                                </div>
                            </div>
                             <!--card Bước-->

                            <div class="col-md-7"></div>
                            <div class="col-md-5">
                                <br>
                                <input type="submit" value="Lưu lại" class="btn btn-primary m-t-15 waves-effect">
                                <a href="/XuatKho/xk_TaoMoiPhieuXuat" class="btn btn-default m-t-15 waves-effect">Reset</a>
                                <button type="button" onclick="troVeTrangTruoc()" class="btn btn-default m-t-15 waves-effect">Trở lại</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Vertical Layout -->
    </div>

</section>
@Html.Raw(ViewBag.ThongBao)

<!-- Model chọn nguyên liệu -->
