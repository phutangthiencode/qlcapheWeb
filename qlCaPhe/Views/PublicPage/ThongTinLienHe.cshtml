@model qlCaPhe.Models.cauHinh
           @using qlCaPhe.App_Start

@{
    ViewBag.Title = "Thông tin liên hệ";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
@Html.Raw(ViewBag.ScriptAPI)
@*@section scripts {
    <section class="scripts">
        @Html.Raw(ViewBag.ScriptMap)
    </section>
}*@
<script src="~/Scripts/googleMap.js"></script>
<section class="scripts">
    @Html.Raw(ViewBag.ScriptMap)
</section>
<div class="container">
    <div class="contact">
        <div class="contact-in">
            <h3>Liên hệ</h3>
            <div class=" col-md-9 contact-left">
                <h5>Vị trí trên Google maps</h5>
                @*<iframe style="width:100%; height:600px" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d505145.6949089349!2d115.07157704999999!3d-8.455471450000001!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2dd22f7520fca7d3%3A0x2872b62cc456cd84!2sBali%2C+Indonesia!5e0!3m2!1sen!2sin!4v1418170815897"></iframe>*@
                <!-- This is the div that will contain the Google Map -->
                <div id="map_canvas" style="height: 600px;"></div>
            </div>

            <div class=" col-md-3 contact-right">
                <h5>Thông tin quán</h5>
                <p>@xulyDuLieu.traVeKyTuGoc(Model.diaChi)</p>
                <p>Phone:@xulyDuLieu.traVeKyTuGoc(Model.hotLine)</p>
                <p>Email: <a href="mailto:@xulyDuLieu.traVeKyTuGoc(Model.email)">@xulyDuLieu.traVeKyTuGoc(Model.email)</a></p>
                <p>
                    Follow on:
                    <div class="social">
                        <ul>
                            <li><a href="@xulyDuLieu.traVeKyTuGoc(Model.facebook)"><i class="facebok"> </i></a></li>
                            <li><a href="@xulyDuLieu.traVeKyTuGoc(Model.twitter)"><i class="twiter"> </i></a></li>
                            <li><a href="@xulyDuLieu.traVeKyTuGoc(Model.googlePlus)"><i class="goog"> </i></a></li>
                        </ul>
                    </div>
                </p>
            </div>
            <div class="clearfix"></div>
        </div>

    </div>
</div>


