@model List<qlCaPhe.Models.slide>
@using qlCaPhe.App_Start;

    <div class="banner1" style="margin-top:-120px;">
        <div class="container">
            <div class="worksmain">
                <div class="section group">
                    @foreach (var slide in Model)
                    {
                        var hinhAnh = xulyDuLieu.chuyenByteHinhThanhSrcImage(slide.hinhAnh);
                    <div class="gallery-box">
                        <div id="nivo-lightbox-demo">  <a href="@hinhAnh" data-lightbox-gallery="gallery1" id="nivo-lightbox-demo"> <span class="rollover1"> </span></a> </div>
                        <img src="@hinhAnh" alt="">
                    </div>    
                    }
                </div>
                <script src="~/Scripts/Public/nivo-lightbox.min.js"></script>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#nivo-lightbox-demo a').nivoLightbox({ effect: 'fade' });
                    });
                </script>
            </div>
            <h3>PUCA Coffee phục vụ khách hàng với tiêu chí</h3>
            <p>Lòng đam mê tỉ mỉ và tình yêu trong từng công đoạn</p>
        </div>
    </div>
